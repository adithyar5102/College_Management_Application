<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_more_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_margin="10dp"
                android:id="@+id/admin_more_set_subjects_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:text="Set Subjects"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/admin_more_set_attendance_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:text="Set Attendance Table"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/admin_more_set_Faculty_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:text="Add Faculty Access"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/admin_more_set_admin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:text="Add Admin Access"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/admin_more_set_faculty_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:text="Add Faculty details"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/admin_more_set_student_fees_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:text="Add Student fees details"/>



        </LinearLayout>


    </ScrollView>

</FrameLayout>