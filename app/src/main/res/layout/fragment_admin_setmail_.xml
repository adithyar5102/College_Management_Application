<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_setmail_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/Admin_mail_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Company Name"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/Admin_mail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Description"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/Admin_mail_formLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Form Link"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/Admin_mail_year_of_passing"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Year Of Passing"
                android:inputType="number"
                android:padding="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/Admin_mail_uploadPhotoButton"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Photo" />



                <Button
                    android:id="@+id/Admin_mail_uploadFileButton"
                    android:layout_width="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Upload File" />



                <Button
                    android:id="@+id/Admin_mail_submitButton"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</FrameLayout>